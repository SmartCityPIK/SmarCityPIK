<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pik.smartcity.WeatherActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/city_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="15dp"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/weather_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_field"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="100sp" />

            <TextView
                android:id="@+id/current_temperature_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_field"
                android:layout_toRightOf="@+id/weather_icon"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/details_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_temperature_field"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/weather_icon"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/update_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_field"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@id/weather_icon"
                android:paddingLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="13sp" />


            <Button
                android:id="@+id/directory"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@id/update_field"
                android:layout_centerHorizontal="true"
                android:background="@drawable/directory"
                android:drawablePadding="10sp"
                android:text="Directory"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24dp" />

            <Button
                android:id="@+id/traffic"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@+id/directory"
                android:layout_centerHorizontal="true"
                android:background="@drawable/traffic2"
                android:padding="2dp"
                android:text="Traffic"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24dp" />

            <Button
                android:id="@+id/cctv"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@+id/traffic"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cctv"
                android:padding="2dp"
                android:text="CCTV"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24dp" />

            <Button
                android:id="@+id/sungai"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_below="@+id/cctv"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sungai"
                android:padding="2dp"
                android:text="Monitoring Sungai"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
